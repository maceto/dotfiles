[alias]
  ci = commit
  co = checkout
  st = status -bs
  staged = diff --cached
  unstaged = diff
  both = diff HEAD
  oneline = log --pretty=oneline --abbrev-commit
  medium = log --pretty=medium --abbrev-commit
  amend = commit --amend
  plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s - %C(yellow)%aN%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  prune = fetch --prune
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetupmerge = true
[format]
  numbered = auto
  headers = "X-Organization: - Soluciones Web\nX-Git: patch"
  subjectprefix = CHANGE
  suffix = .patch
[apply]
  whitespace = nowarn

